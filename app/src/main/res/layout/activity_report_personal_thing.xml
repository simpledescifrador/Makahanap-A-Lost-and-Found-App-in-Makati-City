        <android.support.v7.widget.RecyclerView
            android:id="@+id/report_pt_rv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/report_pt_linearl_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/report_pt_btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Delete"
                android:textColor="@color/defaultRed" />

            <Button
                android:id="@+id/report_pt_btn_cancel_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cancel" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_pt_reward_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView102"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Are you willing to give a reward?" />

                <Switch
                    android:id="@+id/report_pt_switch_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <EditText
                android:id="@+id/report_pt_et_reward_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/all_et_bg"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_peso_sign"
                android:ems="10"
                android:hint="Amount in Peso"
                android:inputType="numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_pt_turnover_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
